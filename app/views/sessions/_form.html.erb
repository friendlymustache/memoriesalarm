<%= form_tag login_path, :class => "centered", :remote => false do %>
  
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag "Password" %>
    <%= password_field_tag :password_hash %>
  </div>
  <div class="actions">
    <%= submit_tag 'Login', :id => "login_submit", :class => "btn btn-success" %>
  </div>
  
<% end %>

<%= link_to "Register", new_user_path, :remote => true, :class => "btn"%>
